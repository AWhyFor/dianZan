page {
  background: #f8f8f8;
  font-family: Menlo,Monaco,Andale Mono,lucida console,Courier New,monospace;
}
.ctn {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  overflow: hidden;
}

.cell {
  background: #ffffff;
  display: block;
  margin-top: 20px;
  padding: 20px; 
}
.cell:last-child {
  margin-bottom: 20px;
}
.cell-slider {
  margin: 0;
}

.page__hd {
  display:block;
  margin-bottom: 20px;
}

.page__hd p {
  display: block;
}

.page__bd textarea {
  height: 80px;
  width: 100%;
}

.pic-ul {
  display: flex;
  flex-flow: wrap;
  justify-content: space-between;
}

.pic-li {
  width: 75px;
  height: 75px;
  margin-top: 10px;
  display: flex;
  border: 1px solid #ddd;
  justify-content: center;
  align-items: center;
  position: relative;
  font-size: 34px;
  color: #ddd;
}
.pic-li.empty {
  border: none;
  margin-top: 0;
  height: 0;
}
.pic-li image {
  width: 75px;
  height: 75px;
}
.pic-li .del-wrap {
  position: absolute;
  top: 0;
  left: 0;
  width: 75px;
  height: 75px;
  background: rgba(30, 30, 30, 0.5);
  align-items: center;
  justify-content: center;
  display: flex;
}
.pic-li .del-wrap image {
  width: 20px;
  height: 20px;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
    display: block;
    height: 32px;
    line-height: 32px;
}
.page__title span{
    text-align: right;
    font-size: 14px;
    color: #888;
    float: right;
}
.page__desc {
    margin: 10px 0 5px;
    display: block;
    color: #888;
    text-align: left;
    font-size: 14px;
}