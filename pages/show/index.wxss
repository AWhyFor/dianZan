.box {
    position: relative;
    padding-top: 76px;
    background-color: #393a3f;
}

.box div {
    display: block;
}

.picture {
    width: 100%;
    height: 280px;
}

.img-show {
    width: 100%;
    height: 100%;
}

.person-info {
    position: relative;
    float: right;
    width: 100%;
    height: 88px;
    /*top: 302px;*/
    margin-top: -54px;
    z-index: 99;
}

.person-info-name {
    float: right;
    color: white;
    font-family: '微软雅黑';
    position: relative;
    font-size: 15px;
    top: 22px;
    text-shadow: 2px 2px 2px #8c8664;
}

.person-info-headpic {
    width: 85px;
    height: 85px;
    float: right;
    background-color: white;
    margin: 0px 12px 0px 14px;
    padding: 1px;
    border: 1px solid #bfbfbf;
}

.words {
    width: 100%;
    height: auto;
    padding-top: 38px;
    position: relative;
    background-color: #f8f8f8;
}

.words-single {
    margin: 12px 12px 9px 12px;
    font-family: '微软雅黑';
    font-size: 15px;
    overflow: hidden;
}

.words-headpic {
    float: left;
    width: 45px;
    height: 45px;
    margin-right: 8px;
}

.words-right {
    width: 298px;
    float: left;
}

.words-name {
    color: #4b618e;
    position: relative;
    margin-top: 2px;
}

.words-essay {
    margin: 5px 0px 5px 0px;
}

.words-picture {
    margin-top: 8px;
    margin-bottom: 6px;
    max-width: 276px;
    max-height: 276px;
    overflow: hidden;
}

.words-picture--four {
    width: 184px;
    height: 184px;
}

.words-picture--one {
    width: 276px;
    height: 276px;
}

.words-picture-single--ecptone {
    margin: 1px;
    width: 90px;
    height: 90px;
    float: left;
}

.words-picture-single--one {

}

.words-url {
    margin-bottom: 14px;
    height: 52px;
    background-color: #ececec;
}

.words-url-img {
    width: 44px;
    height: 44px;
    float: left;
    margin: 4px;
}

.words-url-text {
    font-size: 12px;
    font-family: '微软雅黑';
    margin-top: 8px;
    float: left;
}

.words-position {

}

.words-footer {
    height: 19px;
    margin-top: 8px;
}

.words-footer-timeago {
    font-size: 12px;
    color: #808080;
    float: left;
}

.words-social {
    width: 100%;
    height: auto;
    margin-top: 7px;
    background-color: #eee;
}

.words-social-like {
    width: 100%;
    height: 17px;
    padding: 10px 8px 7px 8px;
    font-size: 14px;
    color: #3c5385;
}

.words-social-comment {
    padding-top: 5px;
    width: 100%;
    height: auto;
    overflow: hidden;
}

.words-social-comment-single {
    font-size: 12px;
    font-family: '微软雅黑';
    margin: 0px 8px 7px 8px;
}

.grayline{
    background-color: #e9e9e9;
    width: 100%;
    height: 2px;
}